generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  documents Document[]

  @@map("users")
}

model Document {
  id     String  @id @default(uuid())
  name   String
  status Boolean
  userId String
  user   User    @relation(fields: [userId], references: [id])
}
